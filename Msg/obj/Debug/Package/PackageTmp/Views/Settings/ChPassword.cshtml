@model Msg.Models.Settings.ChPasswordModel

@using (Ajax.BeginForm("ChPassword", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "form" }))
{
    HttpCookie cookies =  Request.Cookies["User"];

    <input type="hidden" name="id" value="@cookies["id"]" />

    <div id="form">

        <div class="Errors"> @Html.ValidationSummary(true)</div>


        <div class="FormElement">
            <span class="formTitle">Старый пароль</span>
            @Html.PasswordFor(m => m.OldPassword, new { @class = "formInput" })
            @Html.ValidationMessageFor(m => m.OldPassword)
        </div>

        <div class="FormElement">
            <span class="formTitle">Новый пароль</span>
            @Html.PasswordFor(m => m.NewPassword, new { @class = "formInput" })
            @Html.ValidationMessageFor(m => m.NewPassword)
        </div>

        <div class="FormElement">
            <span class="formTitle">Повторите пароль</span>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "formInput" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>

        <input type="submit" value="Изменить пароль" class="formButton" />
    </div>
}
