@model Msg.Models.Settings.ChangeEmailModel


@using (Ajax.BeginForm("ChangeEmail", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "form2" }))
{
    HttpCookie cookies = Request.Cookies["User"];

    <input type="hidden" name="id" value="@cookies["id"]" />

    <div id="form2">

        <div class="Errors"> @Html.ValidationSummary(true)</div>


        <div class="FormElement">
            <span class="formTitle">Новый Email</span>
            @Html.TextBoxFor(m => m.NewEmail, new { @class = "formInput" })
            @Html.ValidationMessageFor(m => m.NewEmail)
        </div>

        <div class="FormElement">
            <span class="formTitle">Ваш пароль</span>
            @Html.PasswordFor(m => m.Password, new { @class = "formInput" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>



        <input type="submit" value="Изменить Email" class="formButton" />
    </div>
}