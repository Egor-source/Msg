@model Msg.Models.PasswordResetModel

@{
    ViewBag.Title = "Сброс пароля";
}

    <section>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="Errors">@Html.ValidationSummary(true)</div>

            <div class="FormElement">
                <h2>Ведите логин</h2>
                @Html.TextBoxFor(m => m.Login, new { @class = "formInput" })
                @Html.ValidationMessageFor(model => model.Login)
            </div>

            <input type="submit" value="Отправить" class="formButton" />
        }
    </section>

